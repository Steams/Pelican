div#submission-holder
  i(class="fa fa-arrow-circle-right fa-3x" id="openSubmitDrawer")
  i(class="fa fa-arrow-circle-left fa-3x" id="openToolbar" on="true")
  aside(on="true" id="submitDrawer")
    #sub-options-holder
      .sub-option
        //- p Title 
        input(type="text" ng-model='submitTitle' placeholder="Title")
      .sub-option  
        //- p Authors 
        input(type="text" ng-model='submitAuthor' placeholder="Authors")
      .sub-option
        //- p Description 
        input(type="text" ng-model='submitDesc' placeholder="Description")
      .sub-option
        //- p Subject
        input(type="text" ng-model="submitSubject" placeholder="Subject")
      .sub-option
        //- p Tags 
        input(type="text" placeholder="Tags")
      .sub-option
        #submitButton(ng-click="submitNote()")
          span(class="glyphicon glyphicon-send")
  div(ta-text-editor-class="form-content"
  ta-html-editor-class="form-content"
  ta-focussed-class="focussed"
  text-angular text-angular-name="editor"
  id="editor"
  name="editor"
  ng-model="holder.htmlContent")
    


  textarea(  id="from" style="width: 100%;display:none;" ng-bind-html="holder.trusted")
