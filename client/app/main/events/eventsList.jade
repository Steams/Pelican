#note-list-container
  ul
    li(ng-repeat="event in events() | filter:$parent.filter"  class="{{event.subject}}" ng-click="openauthor($index)")
        .list-item-body
            .list-item-stats-holder
                .list-item-stat
                    i(class="fa fa-eye")
                    span
                .list-item-stat
                    i(class="fa fa-heart-o")
                    span
            .list-item-details
                .list-item-details-top
                    .list-item-title {{event.name}}
                    .list-item-tags
                    .list-item-time
                .list-item-details-bottom
                    .list-item-description Description : {{event.desc}}
                    .list-item-author Reputation :